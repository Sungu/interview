<div class="container" style="padding-top: 130px;">
  <h1 class="text-center" style="margin-bottom: 40px;">라이브러리</h1>
  <div class="row">
    <% @libs.reverse.each do |a| %>
      <div class="col-sm-6">
        <div class="panel panel-primary text-center" style="margin-left:10px; margin-right:10px;" >
          <div class="panel-heading">
            <h3 class="panel-title"><%= link_to Post.find(a.post_id).interviewee, "/post/index/#{a.post_id}" %></h3>
          </div>
          <div class="panel-body">
            <a href="/post/index/<%= a.post_id%>"><img src="<%= Post.find(a.post_id).front_img.url %>" class="img-rounded" width="300px" height="300px"></a>
          </div>
          <%= link_to '삭제', "/post/destroy_lib/#{a.post_id}", class: 'btn btn-default' %>
          <div style="padding-bottom: 10px"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
