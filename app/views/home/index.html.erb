<section id="slider_part">
  <div class="carousel slide" id="carousel-example-generic" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators text-center">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
     </ol>
  
  <div class="carousel-inner">
    <% @post.sample(3).each_with_index do |a, index| %>
    <div class="item <%= "active" if index == 0 %>">
   		<div class="overlay-slide">
   			<img src="<%= a.door_img.url %>" alt="" class="img-responsive">
   		</div>
   		<div class="carousel-caption">
   	 		<div class="col-md-12 col-xs-12 text-center">
   	 			<h3 class="animated2"><%= a.door_content %></h3>
   			<div class="line"></div>
   			  <p class="animated3"><%= a.content[0..15]%></p>
   		  </div>
  	  </div>
    </div>
    <% end %>
  </div> 	 <!-- End Carousel Inner -->
  
    <!-- Controls -->
    <div class="slides-control ">
      <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
      	<span><i class="fa fa-angle-left"></i></span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
      	<span><i class="fa fa-angle-right"></i></span>
      </a>
    </div>
  </div>
</section>


<!-- Portfolio Grid Section -->
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 style="margin-top: 50px;">Story of People</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <% @post.reverse.each do |a| %>
                <div class="col-sm-6 portfolio-item">
                    <a href="/post/index/<%= a.id %>" class="portfolio-link">
                        <div class="caption" style="background: url(<%= a.word_cloud.url %>);background-size: 500px 500px;background-repeat: no-repeat;">
                            <div class="caption-content">
                                <i class="fa fa-search-plus fa-3x"></i>
                            </div>
                        </div>
                        <img src="<%= a.front_img.url %>" class="img-rounded" alt="" id="overout" width="500px" height="500px">
                    </a>
                </div>
            <% end %>
        </div>
    </div>
</section>