<div class="container"style="padding-top: 130px;">
  <div class="row">
    <div>
      <h1 style="margin-bottom: 40px;"><%= @post.interviewee %>님에 대한 인터뷰</h1>
      <p><img src="<%= @post.main_img.url %>" width="500px" height="400px" ></p>
      <%= form_tag "/post/add_lib", method: "post" do %>
        <input type="hidden" name="post_id" value="<%= @post.id %>" >
        <br>
        <p><button class="btn btn-lg btn-success" href="#" role="button">라이브러리 등록</button></p>
      <% end %>
      
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">인터뷰 내용</h3>
        </div>
        <div class="panel-body">
          <%= @post.content %>
        </div>
      </div>
    </div>
    
    <div class="col-lg-2" style="position: fixed; top: 300px; right: 0px; background: red;">
      글 : <%= @post.writer %><br>
      사진 : <%= @post.photo_writer %><br>
      작성일 : <%= @post.created_at.year %> / <%= @post.created_at.month %> / <%= @post.created_at.day %><br>
    </div>
  </div>
</div>
