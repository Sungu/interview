<div class="comment-wrap" >
	<div class="photo">
		<div class="avatar" style="background-image: url('<%= current_user.image %>');margin-top:10px;"></div>
		<p style="text-align: center; margin-right: 20px; font-size: inherit;color: #C5C5C5;font-weight: 500;"><%= current_user.name %></p>
	</div>
	<div class="comment-block" id="comments_form_<%=@post.id%>">
	  <%= form_tag(post_comments_path(@post), method: "post", remote: true) do %>
			<textarea name="comment[body]" cols="30" rows="3" placeholder="Add comment..."></textarea>
			<p><button class="fa fa-paper-plane" href="#" role="button" style="border: none; background: none;"></button></p>
		<% end %>
	</div>
</div>
